{
  "name": "WICKED Website",
  "description": "WICKED Team Official Website - Discord Bot & Software Development",
  "startup": {
    "done": "Server is running on",
    "userInteraction": []
  },
  "scripts": {
    "installation": {
      "script": "#!/bin/bash\nnpm install",
      "container": "node:18-alpine",
      "entrypoint": "bash"
    }
  },
  "variables": [
    {
      "name": "Server Port",
      "description": "The port the server will listen on",
      "env_variable": "PORT",
      "default_value": "50012",
      "user_viewable": true,
      "user_editable": false,
      "rules": "required|numeric|between:1024,65535"
    },
    {
      "name": "Admin Username",
      "description": "Admin panel username",
      "env_variable": "ADMIN_USERNAME",
      "default_value": "admin",
      "user_viewable": true,
      "user_editable": true,
      "rules": "required|string|max:50"
    },
    {
      "name": "Admin Password",
      "description": "Admin panel password",
      "env_variable": "ADMIN_PASSWORD",
      "default_value": "changeThisPassword123!",
      "user_viewable": false,
      "user_editable": true,
      "rules": "required|string|min:8"
    }
  ]
}